<section class="rehan-banner">
  <div class="inner">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    <div class="cta">
      <a href="{{ section.settings.primary_link }}">{{ section.settings.primary_label }}</a>
      <a href="{{ section.settings.secondary_link }}">{{ section.settings.secondary_label }}</a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Rehan Banner",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "The Gift Guide" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Discover joy..." },
    { "type": "text", "id": "primary_label", "label": "Primary label", "default": "Shop now" },
    { "type": "url",  "id": "primary_link",  "label": "Primary link" },
    { "type": "text", "id": "secondary_label", "label": "Secondary label", "default": "Learn more" },
    { "type": "url",  "id": "secondary_link",  "label": "Secondary link" }
  ],
  "presets": [{ "name": "Rehan Banner" }]
}
{% endschema %}
