<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
      {{ page.title }}
      {% if current_tags %} - {{ current_tags | join: ',' }}{% endif %}
      {% if current_page != 1 %} - {{ current_page }} {% endif %}
      {% unless page_title contains shop.name %} - {{ shop.name }}{% endunless %}
    </title>
    {{ 'theme.css' | asset_url | stylesheet_tag }}
    {{ content_for_header }}
  </head>
  <body>
    <a class="skip-to-content-link" href="#MainContent">Skip to content</a>
    <main id="MainContent" role="main">
      {{ content_for_layout }}
    </main>

    {{ 'theme.js' | asset_url | script_tag }}

    {% comment %} Added Popup Container {% endcomment %}
    <div id="popupContainer" class="popup hidden">
      <div class="popup-content">
        <button class="popup-close" aria-label="Close">&times;</button>
        <div class="popup-body">
          <p>Product Quick View will load here...</p>
        </div>
      </div>
    </div>

    <div id="cart-toast" class="cart-toast hidden">
      <p>Product added to cart!</p>
      <a href="/cart" class="view-cart-btn">View Cart</a>
    </div>
  </body>
</html>
